<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="EnterpriseSuite" parallel="tests" thread-count="4">

    <test name="DemoTests_Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="opensource.DemoTests"/>
        </classes>
    </test>

    <test name="DemoTests_Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="opensource.DemoTests"/>
        </classes>
    </test>

    <test name="DemoTests_Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="opensource.DemoTests"/>
        </classes>
    </test>

    <test name="DemoTests_Opera">
        <parameter name="browser" value="opera"/>
        <classes>
            <class name="opensource.DemoTests"/>
        </classes>
    </test>

</suite>
